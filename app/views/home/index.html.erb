<div class="flex flex-wrap -mx-4">
  
    <div class="w-full md:w-1/4 px-4 py-8">
      <div class="bg-white shadow-md rounded-lg p-4">
        <h2 class="text-xl font-semibold text-center mb-6">Add New Product</h2>
        <%= render 'products/form', product: Product.new %>
      </div>
      <div class="bg-white shadow-md rounded-lg p-4 mt-10">
        <h2 class="text-xl font-semibold text-center mb-6">Add New Item</h2>
        <%= render 'items/form', item: Item.new %>
      </div>
    </div>
    
    <div class="w-full md:w-3/4 px-4 py-8">
      <div class="bg-white shadow-md rounded-lg p-4">
        <h2 class="text-xl font-semibold text-center mb-6">Product List</h2>
        <%= render 'products/list', products: @products %>
      </div>
      <div class="bg-white shadow-md rounded-lg p-4 mt-10">
        <h2 class="text-xl font-semibold text-center mb-6">Items List</h2>
        <%= render 'items/list', items: @items %>
      </div>
    </div>
  </div>